<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dividing line to delineate sections. -->
    <style name="SectionBreak">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5sp</item>
        <item name="android:background">#7f7f7f</item>
    </style>

    <!-- Dividing line to delineate list elements. -->
    <style name="ElementBreak">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:background">#7f7f7f</item>
    </style>

</resources>
